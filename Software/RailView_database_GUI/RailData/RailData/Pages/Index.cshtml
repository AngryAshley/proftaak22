@page
@model IndexModel
@{
    ViewData["Title"] = "Video surveillance";
}

<div class="text-center d-flex justify-content-center">
    <div>
        <img src="/images/logo.png"/>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                <input asp-for="Username" id="userName" name="userName" type="text" class="form-control" placeholder="Gebruikersnaam"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="Password" id="passWord" name="passWord" type="password" class="form-control" placeholder="Wachtwoord"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-general w-100">Login</button>
        </form>
    </div>
</div>
